    {
      "parameters": {
        "jsCode": "function cleanCitations(text) {\n  if (!text || typeof text !== \"string\") return \"\";\n\n  return text\n    // Remove citation markers like [1], [12]\n    .replace(/\\[\\d+\\]/g, \"\")\n\n    // Remove markdown bold/italic\n    .replace(/\\*\\*/g, \"\")\n\n    // Remove markdown headers ### ##\n    .replace(/#{1,6}\\s*/g, \"\")\n\n    // Remove bullet points\n    .replace(/^\\s*[-â€¢]\\s*/gm, \"\")\n\n    // Remove table pipes\n    .replace(/\\|/g, \" \")\n\n    // Remove UUIDs if present\n    .replace(/\\b[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}\\b/gi, \"\")\n\n    // Remove extra symbols\n    .replace(/[_~`^]/g, \"\")\n\n    // Normalize newlines\n    .replace(/\\n+/g, \"\\n\")\n\n    // Normalize spaces\n    .replace(/\\s+/g, \" \")\n\n    // Trim\n    .trim();\n}\n\nreturn items.map(item => ({\n  json: {\n    agent_id: item.json.agent_id,\n\n    // KEEP TEXT AS-IS\n    text: item.json.text,\n\n    // CLEAN ONLY CITATIONS\n    citations: cleanCitations(item.json.citations)\n  }\n}));\n"
      },
