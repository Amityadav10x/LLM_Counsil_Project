    {
      "parameters": {
        "jsCode": "const votes = {};\nconst allRisks = [];\n\nfor (const item of items) {\n  const sel = item.json.selected;\n\n  if (sel && sel !== \"none\" && sel !== \"error\") {\n    votes[sel] = (votes[sel] || 0) + 1;\n  }\n\n  if (Array.isArray(item.json.risks)) {\n    allRisks.push(...item.json.risks);\n  }\n}\n\nconst sorted = Object.entries(votes).sort((a, b) => b[1] - a[1]);\nconst decision = sorted.length ? sorted[0][0] : \"none\";\nconst confidence = sorted.length ? sorted[0][1] / items.length : 0;\n\nreturn [{\n  json: {\n    decision,\n    confidence,\n    risks: allRisks\n  }\n}];\n"
      },
